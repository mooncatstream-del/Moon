        ];

        let clickCount = 0;
        const maxClicks = 5;
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const main = document.getElementById('main');
        const celebration = document.getElementById('celebration');
        const sticker = document.getElementById('sticker');
        const stickerCeleb = document.getElementById('stickerCeleb');

        sticker.src = images[0];

        noBtn.addEventListener('click', () => {
            clickCount++;

            if (clickCount < images.length) {
                sticker.src = images[clickCount];
            }

            const scaleNo = 1 - (clickCount * 0.15);
            noBtn.style.transform = `scale(${Math.max(0.3, scaleNo)})`;

            const scaleYes = 1 + (clickCount * 0.15);
            yesBtn.style.transform = `scale(${scaleYes})`;

            // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–π —Å–¥–≤–∏–≥ –∫–Ω–æ–ø–∫–∏ –î–∞ –≤–ø—Ä–∞–≤–æ, —á—Ç–æ–±—ã —Ç–µ–∫—Å—Ç –Ω–µ —É—Ö–æ–¥–∏–ª –∑–∞ –ª–µ–≤—ã–π –∫—Ä–∞–π
            const shiftYesRight = Math.min(120, clickCount * 20); // 20px –∑–∞ –∫–ª–∏–∫, –º–∞–∫—Å–∏–º—É–º 120px
            yesBtn.style.marginLeft = `${shiftYesRight}px`;

            if (clickCount < reasons.length) {
                yesBtn.textContent = reasons[clickCount - 1];
            }

            // –≠—Ñ—Ñ–µ–∫—Ç—ã "–ù–µ—Ç"
            if (clickCount >= 2) {
                noBtn.classList.add('panic');
            }

            if (clickCount >= 3) {
                const randomX = (Math.random() - 0.5) * 120;
                const randomY = (Math.random() - 0.5) * 80;
                noBtn.style.transform += ` translate(${randomX}px, ${randomY}px)`;
            }

            if (clickCount >= 4) {
                noBtn.style.backgroundColor = '#888888';
                noBtn.style.opacity = 0.6;
            }

            if (clickCount >= maxClicks) {
                noBtn.classList.remove('panic');
                noBtn.classList.add('surrender');
                setTimeout(() => {
                    noBtn.style.display = 'none';
                }, 1200);

                yesBtn.style.position = 'absolute';
                yesBtn.style.left = '50%';
                yesBtn.style.marginLeft = '0'; // —Å–±—Ä–∞—Å—ã–≤–∞–µ–º —Å–¥–≤–∏–≥
                yesBtn.style.transform = `translateX(-50%) scale(${scaleYes})`;
                yesBtn.textContent = '–°–æ–ø—Ä–æ—Ç–∏–≤–ª–µ–Ω–∏–µ –±–µ—Å–ø–æ–ª–µ–∑–Ω–æ! üòò';
            }
        });

        yesBtn.addEventListener('click', () => {
            main.style.display = 'none';
            celebration.style.display = 'flex';

            stickerCeleb.src = "https://fv5-4.files.fm/thumb_show.php?i=3r9uqvrh4m&view&v=1&PHPSESSID=e75eca94c98c8547e93d95a07dabfb4ace8e08a1";

            startHearts();
        });

        function startHearts() {
            setInterval(createHeart, 300);
        }

        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.innerHTML = '‚ù§Ô∏è';
            heart.style.left = `${Math.random() * 100}vw`;
            heart.style.animationDuration = `${Math.random() * 2 + 3}s`;
            document.body.appendChild(heart);
            setTimeout(() => heart.remove(), 5000);
        }
